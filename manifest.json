{
  "name": "Test Screenshot Extension",
  "version": "1.3",
  "description": "Demonstrate screenshot functionality in the chrome.tabs api.",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "camera.png",
    "default_title": "Take a screen shot!"
    // "default_popup": "screenshot.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["screenshot.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "manifest_version": 2
}
